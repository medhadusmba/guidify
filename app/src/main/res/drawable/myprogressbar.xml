<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />
            <gradient android:startColor="#C0C0C0" android:centerColor="#F8F8FF"
                android:centerY="0.75" android:endColor="#ffffff" android:angle="90" />
            <stroke android:width="0.01dp" android:color="@color/primary" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient android:startColor="@color/primary" android:endColor="@color/color_primary_light"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="@color/primary" />
            </shape>
        </clip>
    </item>
</layer-list>