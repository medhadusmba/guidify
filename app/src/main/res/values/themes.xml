<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Guidify" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>

        <item name="colorPrimaryVariant">@color/color_primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground" tools:targetApi="l">@color/color_background</item>
        <item name="android:textColor" tools:targetApi="l">@color/color_text</item>
        <item name="android:fontFamily">@font/font_primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Guidify.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>

    <style name="Theme.Guidify.ActivityListTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">bottom</item>


    </style>

    <style name="Theme.Guidify.ActivityItemAppBar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">#FFEB3B</item>
    </style>

    <style name="RoundedImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7%</item>
    </style>

</resources>